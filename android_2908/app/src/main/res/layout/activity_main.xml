<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BME Cecurater"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginBottom="30dp"/>
        <EditText
            android:id="@+id/edt1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:ems="15"
            android:textSize="19dp"
            tools:ignore="TouchTargetSizeCheck"
            android:hint="Cân Nặng"/>

        <EditText
            android:id="@+id/edt2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:ems="15"
            android:hint="Chiều Cao"
            android:textSize="19dp"
            tools:ignore="TouchTargetSizeCheck" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Che do"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/rdo1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="an kieng"/>
            <RadioButton
                android:id="@+id/rdo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="khong an kieng"/>

        </RadioGroup>

        <CheckBox
            android:id="@+id/ck1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="tinh bot"/>
        <CheckBox
            android:id="@+id/ck2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="protein"/>
        <CheckBox
            android:id="@+id/ck3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="vitamin"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Kiem tra"
            android:textColor="#fff" />
        <Button
            android:id="@+id/btn2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Che do an"
            android:textColor="#fff" />
        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Your BMI"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="20dp" />
        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tinh Trang"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/txt5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="20dp" />
        <TextView
            android:id="@+id/txt6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Che Do"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/txt7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="loai do an"
            android:textSize="20dp" />

    </LinearLayout>


</RelativeLayout>